    <%= javascript_include_tag "http://cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js" %>
    <%= csrf_meta_tags %>

  </head>

  <body>
      <nav class="top-bar" data-topbar role="navigation">
          <ul class="title-area">
              <li class="name">
                  <h2><a href="#">DevStack</a></h2>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
          </ul>

          <section class="top-bar-section">
            <ul class="right">
              <li class="name" style="list-style-type: none;"><h2><a href="#">Login</a></h2></li>
            </ul>
          </section>
      </nav>

    <%= yield %>

  </body>
  <footer>
      <span style="color:white;">&nbsp;&nbsp;&nbsp;&nbsp;DevStack Copyright &copy; 2015</span>
      <a href="/help">Help</a> |
      <a href="/about">About</a> |
